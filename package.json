{
  "name": "todoist",
  "version": "v1.5.1",
  "description": "A web wrapper for Todoist",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps",
    "build-mac": "electron-builder build --mac",
    "build-windows": "electron-builder build --windows nsis --x64 --ia32",
    "build-linux": "electron-builder build --linux rpm deb AppImage",
    "publish-mac": "electron-builder build --mac --publish always",
    "publish-linux": "electron-builder build --linux rpm deb AppImage --publish always",
    "publish-windows": "electron-builder build --windows nsis --x64 --ia32 --publish always"
  },
  "repository": "https://github.com/klinker24/todoist-desktop",
  "keywords": [
    "todoist",
    "task"
  ],
  "author": {
    "name": "Luke Klinker",
    "email": "luke@klinkerapps.com",
    "url": "luke.klinker.xyz"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "xyz.klinker.todoist",
    "productName": "Todoist",
    "asar": true,
    "artifactName": "todoist-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "klinker24",
        "repo": "todoist-desktop",
        "releaseType": "draft"
      }
    ]
  },
  "devDependencies": {
    "electron": "6.0.0",
    "electron-builder": "21.2.0"
  },
  "dependencies": {
    "electron-window-state": "5.0.3"
  }
}
