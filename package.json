{
  "name": "todoist",
  "version": "v1.1.2",
  "description": "A web wrapper for Todoist",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/klinker24/todoist-desktop",
  "keywords": [
    "todoist",
    "task"
  ],
  "author": {
    "name": "Luke Klinker",
    "email": "luke@klinkerapps.com",
    "url": "luke.klinker.xyz"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "xyz.klinker.todoist",
    "productName": "Todoist",
    "asar": true,
    "artifactName": "todoist-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "devDependencies": {
    "electron": "3.0.3",
    "electron-builder": "20.28.4"
  },
  "dependencies": {
    "electron-window-state": "4.1.1"
  }
}
